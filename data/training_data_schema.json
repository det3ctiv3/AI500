{
  "metadata": {
    "dataset_name": "FieldScore AI Training Dataset",
    "version": "1.0",
    "created_date": "2025-12-07",
    "description": "Synthetic training data for smallholder farm risk scoring model",
    "total_records": 50,
    "features": 12,
    "target_variable": "risk_score",
    "data_sources": [
      "Sentinel-2 NDVI (Normalized Difference Vegetation Index)",
      "ERA5 Weather Data",
      "SoilGrids Soil Properties",
      "Loan Performance Records"
    ]
  },
  "feature_descriptions": {
    "farm_id": "Unique identifier for each farm",
    "latitude": "Farm location latitude (decimal degrees)",
    "longitude": "Farm location longitude (decimal degrees)",
    "crop_type": "Primary crop cultivated (maize, rice, coffee, wheat, etc.)",
    "farm_area_hectares": "Total cultivated area in hectares",
    "ndvi_mean_12mo": "Average NDVI over past 12 months (0-1 scale, higher = healthier vegetation)",
    "ndvi_slope": "Trend in NDVI over time (positive = improving, negative = declining)",
    "ndvi_14day_delta": "Change in NDVI over past 14 days (short-term health indicator)",
    "ndvi_anomaly_zscore": "Deviation from historical NDVI mean in standard deviations",
    "rainfall_deficit_30day": "Rainfall shortfall in mm over past 30 days (drought indicator)",
    "coefficient_of_variation": "NDVI variability measure (lower = more stable)",
    "soil_organic_carbon": "Soil organic carbon percentage (fertility indicator)",
    "loan_amount_usd": "Loan amount requested in USD",
    "loan_outcome": "Historical loan performance (repaid/defaulted)",
    "risk_score": "Model output: 0-100 risk score (higher = lower risk)",
    "risk_category": "Risk classification (high: 0-30, medium: 31-60, low: 61-100)"
  },
  "risk_scoring_logic": {
    "high_risk": {
      "score_range": "0-30",
      "characteristics": [
        "NDVI mean < 0.60 (poor vegetation health)",
        "Negative NDVI slope < -0.015 (declining trend)",
        "NDVI anomaly z-score < -2.0 (significant decline from normal)",
        "Rainfall deficit > 60mm (severe drought)",
        "Coefficient of variation > 0.40 (unstable production)"
      ],
      "loan_recommendation": "Reject or require additional collateral + high interest rate"
    },
    "medium_risk": {
      "score_range": "31-60",
      "characteristics": [
        "NDVI mean 0.60-0.70 (moderate vegetation health)",
        "NDVI slope -0.015 to 0.010 (stable or slight decline)",
        "NDVI anomaly z-score -2.0 to 0.0 (below normal)",
        "Rainfall deficit 30-60mm (moderate drought)",
        "Coefficient of variation 0.25-0.40 (moderate variability)"
      ],
      "loan_recommendation": "Approve with standard terms or slightly elevated interest"
    },
    "low_risk": {
      "score_range": "61-100",
      "characteristics": [
        "NDVI mean > 0.70 (excellent vegetation health)",
        "Positive NDVI slope > 0.010 (improving trend)",
        "NDVI anomaly z-score > 0.0 (above normal)",
        "Rainfall deficit < 30mm (adequate water)",
        "Coefficient of variation < 0.25 (stable production)"
      ],
      "loan_recommendation": "Approve with favorable terms and lower interest rate"
    }
  },
