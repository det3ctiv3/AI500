  "model_configuration": {
    "algorithm": "Gradient Boosting (XGBoost/LightGBM)",
    "hyperparameters": {
      "n_estimators": 100,
      "max_depth": 6,
      "learning_rate": 0.1,
      "min_child_weight": 1,
      "subsample": 0.8,
      "colsample_bytree": 0.8
    },
    "validation_strategy": {
      "method": "5-fold cross-validation",
      "train_test_split": 0.8,
      "stratification": "risk_category"
    },
    "target_metrics": {
      "primary": "AUC-ROC > 0.75",
      "secondary": [
        "Precision > 0.70",
        "Recall > 0.65",
        "F1-Score > 0.67"
      ]
    }
  },
  "data_collection_workflow": {
    "step_1": {
      "name": "Location Input",
      "description": "Farmer provides farm coordinates (GPS) or draws polygon on map",
      "tools": "Leaflet.js map interface, GeoJSON validation"
    },
    "step_2": {
      "name": "Satellite Data Retrieval",
      "description": "Fetch 12 months of Sentinel-2 NDVI data for farm polygon",
      "api": "Google Earth Engine API",
      "resolution": "10m",
      "update_frequency": "5 days"
    },
    "step_3": {
      "name": "Weather Data Retrieval",
      "description": "Fetch 30-day historical precipitation and temperature",
      "api": "ERA5 Climate Reanalysis / OpenWeatherMap",
      "parameters": ["precipitation", "temperature_2m", "soil_moisture"]
    },
    "step_4": {
      "name": "Feature Engineering",
      "description": "Calculate all derived features from raw satellite and weather data",
      "outputs": [
        "NDVI statistics (mean, slope, delta)",
        "Anomaly detection (z-scores)",
        "Rainfall deficit calculation",
        "Coefficient of variation"
      ]
    },
    "step_5": {
      "name": "Model Inference",
      "description": "Run trained gradient boosting model to generate risk score",
      "latency": "< 2 seconds",
      "output": "0-100 risk score with confidence level"
    }
  }
